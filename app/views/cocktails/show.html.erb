<h1>Cocktail/show</h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<H2><%= @cocktail.name %></H2>
<p></p>

<% @cocktail.doses.each do |dose| %>
  <ul><%= dose.description %>  <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete, data: {confirm: "Sure sure sure ?"}</ul>
<% end %>

<p></p>

<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to List", cocktails_path %>