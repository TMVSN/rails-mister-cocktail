<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
        <div class="card" style="background-image:url(<%= cl_image_path cocktail.photo.key %>); background-size:cover; background-position: center"> 
          <%= cl_image_tag cocktail.photo.key %>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
    <% end %>
    </div>
</div>
