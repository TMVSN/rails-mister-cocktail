<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
        <div class="card" style="background-image:url(<%= cl_image_path cocktail.photo.key %>); background-size:cover; background-position: center, border-radius:10px"> 
          <%= link_to cocktail.name, cocktail_path(cocktail), class:"cocktail-name" %>
        </div>
    <% end %>
    </div>
</div>
